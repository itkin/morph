!!! 5
%html
  %head
    %title Morph
    = stylesheet_link_tag 'compiled/application', :cache  => 'application_all'
    = javascript_include_tag :defaults, 'website', :cache => 'application_all'
  %body
    .page
      #side-content
        #side-content-wrapper
          %ul#logo
            %li= image_tag "logo_1.gif"
            %li= image_tag "logo_2.gif"
            %li= image_tag "logo_3.gif"
            %li= image_tag "logo_4.gif"
            %li= image_tag "logo_5.gif"

          %h1= Parameter::HEADLINE.value
          %ul.postal_address
            %li= Parameter::NAME.value
            %li= Parameter::STREET.value
            %li= Parameter::CITY.value
            %li= Parameter::COUNTRY.value
          %ul.phone_numbers
            %li
              %label T/
              = Parameter::PHONE.value
            %li
              %label F/
              = Parameter::CELL_PHONE.value
          #languages
            - if I18n.locale.to_s == 'fr'
              = link_to "English version", root_path(:locale => :en)
            - else
              = link_to "Version franÃ§aise", root_path(:locale => :fr)
          #contact
            %label Contacts
      #main-content
        = yield
